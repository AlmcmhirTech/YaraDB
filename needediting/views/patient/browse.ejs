<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a Clinic</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <link rel="stylesheet" href="<%= cssFile %>">
</head>

<body>

    <!-- NAVIGATOR BAR -->
    <%- include('navigator') %>


    <section class="single-booking container my-5 pt-5">
        <div class="row">

            <div class="form-container">
                <h1 class="text-center">Find a Dental Clinic in your local area</h1>
                <hr class="mx-auto" style="width: 50px;">

                <form id="finder-form">
                    <div class="form-group mb-3">
                        <label for="near-me">By Village</label>
                        <select class="form-control" id="village" name="barangay">
                            <option value="">Choose Village</option>
                        <% clinicdata.forEach(clinic =>{ %>
                            <option><%= clinic.village %></option>
                        <% }); %>
                        </select>
                    </div>
                    <div class="mt-2">
                        <label for="Postcode" class="form-label">By Postcode</label>
                        <input type="number" value="" name="postcode" class="form-control" id="postcode" placeholder="Enter Postcode">
                    </div>
                    <div class="mt-2">
                        <label for="Adddress" class="form-label">By Address</label>
                        <input type="text" value="" name="address" class="form-control" id="address" placeholder="Enter Address">
                    </div>
                    <br>
                     <div class="text-danger" id="error"></div>
                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-primary book-btn" value="Find Clinics">
                    </div>
                </form>
            </div>

        </div>

        <!-- Clinic Results Section -->
        <div class="mt-5">
            <div id="clinic-list" class="list-group">
                        <th>
                            <% clinics.forEach(clinic =>{%>
                                <div>
                                    <div class="star">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                        <h5 class="c-name"><%= clinic.clinic_name %></h5>
                                        <h4 class="c-price">â‚±999</h4>
                                        <form action="/patient/booking" method = "post">
                                            <button type = 'submit' class="book-btn" name = 'clinic_id' value = '<%= clinic.clinic_id %>'>Book Now</button>
                                        </form>
                                    </div>
                                    <% });%>
                
                        </th>
                 
        </div>
        </div>
    </section>

    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/browse.js"></script>
        
</body>

</html>