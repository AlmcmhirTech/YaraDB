    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="<%= cssFile %>">
    <style>
  
    </style>
</head>
<body>

<!-- NAVIGATOR BAR -->
<nav class="navbar navbar-expand-lg bg-body-tertiary py-3 fixed-top">
    <div class="container">
        <img src="assets/imgs/logo.jpeg" alt="Logo"/>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse nav-buttons" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="#">Home</a></li>

                <li class="nav-item"><a class="nav-link" href="#">Help</a></li>

            </ul>
        </div>
    </div>
</nav>

<section class="box-container">
    <form id = 'register-form' action="/patient/registersuccess" method="post">
        <h1 id="Title">Create an account</h1>
        <h4 id="T-para">Enjoy our services to find your dream clinic.</h4>

        <label for="fname">First Name</label>
        <input type="text" id="fname" name="first_name" placeholder="Enter your first name">
        <div class="text-danger" id="fname_error"></div>
       
        <label for="mname">Middle Name</label>
        <input type="text" id="mname" name="middle_name" placeholder="Enter your middle name">
        <div class="text-danger" id="mname_error"></div>
       
        <label for="lname">Last Name</label>
        <input type="text" id='lname' name="last_name" placeholder="Enter your last name">
        <div class="text-danger" id="lname_error"></div>
        
        <label for="email">Email</label>
        <input type="text" id="email" name="email" placeholder="Enter your email">
        <div class="text-danger" id="email_error"></div>
       
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password">
        <div class="text-danger" id="password_error"></div>
       
       
        <label for="confirm_password">Confirm Password</label>
        <input type="password" id="conpassword" name="confirm_password" placeholder="Confirm your password">
        <div class="text-danger" id="conpassword_error"></div>
      
        <label for="mobile_number">Mobile Number</label>
        <input type="tel" id="mobile_number" name="mobile_number" placeholder="Enter your mobile number" value="+63" minlength="19" maxlength="19" size="20">
        <div class="text-danger" id="number_error"></div>

        <button type="submit" id="Create_button">Create account</button>
    </form>
</section>

<script src = "/patient-register.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-oBqDVmMz4fnFO9yKhCktJ8FP3j/RbW9r6Ko6IEo4u0VYl8DzROhpmzj7hzRIXJ4k" crossorigin="anonymous"></script>
</body>
</html>
